# WorkWise Railway Production Environment
# Copy these variables to your Railway project's environment variables

# Application
APP_NAME=WorkWise
APP_ENV=production
APP_KEY=base64:DBUZCq+YUBzF0jPtt1ZdtKPsl37dm3tOS0y6g0JfNjc=
APP_DEBUG=false
APP_URL=https://workwise-production.up.railway.app

# Database - PRIMARY METHOD (Recommended)
DATABASE_URL=${{Postgres.DATABASE_PUBLIC_URL}}
DB_CONNECTION=pgsql

# Database - FALLBACK METHOD (if DATABASE_URL doesn't work)
# Comment out DATABASE_URL above and uncomment these:
# DB_HOST=${{Postgres.PGHOST}}
# DB_PORT=${{Postgres.PGPORT}}
# DB_DATABASE=${{Postgres.PGDATABASE}}
# DB_USERNAME=${{Postgres.PGUSER}}
# DB_PASSWORD=${{Postgres.PGPASSWORD}}

# Cache & Session - Use 'database' if Redis not available
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Redis - ONLY if you have Redis service on Railway
# REDIS_URL=${{Redis.REDIS_URL}}
# REDIS_CLIENT=phpredis
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# Filesystem
FILESYSTEM_DISK=public

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@workwise.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Broadcasting
BROADCAST_CONNECTION=log

# Session
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Other
BCRYPT_ROUNDS=12
